{
  /* Editor settings */
  "editor.fontSize": 13,
  "editor.fontFamily": "FiraCode Nerd Font",
  "editor.fontLigatures": false,
  "editor.tabSize": 2,
  "[python][solidity]": {
    "editor.tabSize": 4
  },
  "editor.rulers": [80, 120],
  "editor.wordWrapColumn": 100,
  "editor.minimap.enabled": true,
  // "editor.lineNumbers": "relative",
  "editor.bracketPairColorization.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  // "editor.codeActionsOnSave": {
  //   "source.organizeImports": true
  // },
  // "editor.inlineSuggest.enabled": true,

  /* Terminal settings */
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Monokai Pro",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    "[Monokai Pro]": {
      "terminal.ansiBlue": "#78dce8",
      "terminal.ansiBrightBlue": "#78dce8",
      "terminal.ansiCyan": "#ab9df2",
      "terminal.ansiBrightCyan": "#ab9df2",
      "terminal.ansiMagenta": "#fc9867",
      "terminal.ansiBrightMagenta": "#fc9867"
    }
  },

  /* Explorer settings */
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "terminal.external.osxExec": "Alacritty.app",

  /* Vim mode settings */
  "vim.leader": "<space>",
  "vim.sneak": true,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["d"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["D"],
      "after": ["\"", "_", "D"]
    },
    {
      "before": ["d", "d"],
      "after": ["\"", "_", "d", "d"]
    }
  ],

  /* Extension settings */
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "svelte.enable-ts-plugin": true,
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.documentSelectors": ["**/*.svelte"],
  "cSpell.userWords": ["Petretta", "POSTHOG"],
  "[python]": {
    "editor.formatOnType": true
  },
  "editor.inlineSuggest.enabled": true,
  "editor.accessibilitySupport": "off"
}
