{
  /* Editor settings */
  "editor.fontSize": 14,
  "editor.fontFamily": "'MonaspiceAr Nerd Font', monospace",
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "[python][solidity]": {
    "editor.tabSize": 4
  },
  "editor.rulers": [80, 120],
  "editor.minimap.enabled": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "always"
  },
  "editor.linkedEditing": true,
  "editor.quickSuggestions": {
    "strings": true
  },
  "workbench.editor.showTabs": "none",
  "workbench.colorTheme": "Monokai Pro",
  "search.useParentIgnoreFiles": true,

  /* Terminal settings */
  "terminal.external.osxExec": "Ghostty.app",
  "workbench.colorCustomizations": {
    "[Monokai Pro]": {
      "terminal.ansiBlack": "#727072",
      "terminal.ansiBlue": "#78dce8",
      "terminal.ansiBrightBlue": "#78dce8",
      "terminal.ansiBrightCyan": "#ab9df2",
      "terminal.ansiBrightMagenta": "#fc9867",
      "terminal.ansiCyan": "#ab9df2",
      "terminal.ansiMagenta": "#fc9867",
      "terminal.background": "#2d2a2e",
    }
  },

  /* File settings */
  "files.associations": {
    "*.css": "tailwindcss",
    "*.example": "properties",
    "*.svg": "html",
    "*.vars": "properties",
  },

  /* Explorer settings */
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  /* Vim settings */
  "editor.lineNumbers": "relative",
  "editor.cursorSurroundingLines": 9,

  /* Extension settings */
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "SQL-Formatter-VSCode.dialect": "postgresql",
  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua"
  },
  "[sql]": {
    "editor.defaultFormatter": "ReneSaarsoo.sql-formatter-vsc",
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  
  /* Cursor settings */
  "workbench.activityBar.orientation": "horizontal",
  "cursor.cpp.disabledLanguages": [
    "plaintext",
    "markdown",
    "scminput"
  ],
  "workbench.iconTheme": "Monokai Pro Icons",
  "cursor.cmdk.autoSelect": false,
  "cursor.cmdk.useThemedDiffBackground": false,
  "extensions.ignoreRecommendations": true,
  // "cSpell.userWords": ["Petretta"],
  // "cursor.chat.smoothStreaming": true,
  // "cursor.cmdk.autoSelect": false,
  // "editor.accessibilitySupport": "off",
  // "prettier.documentSelectors": ["**/*.svelte"],
  // "prettier.semi": false,
  // "svelte.enable-ts-plugin": true,
  // "workbench.editor.editorActionsLocation": "default",
  // "workbench.layoutControl.enabled": false,
}
