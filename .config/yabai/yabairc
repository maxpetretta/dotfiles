# Window settings
yabai -m config layout                       bsp
yabai -m config top_padding                  15
yabai -m config bottom_padding               15
yabai -m config left_padding                 15
yabai -m config right_padding                15
yabai -m config window_gap                   15

# Mouse settings
yabai -m config mouse_modifier               alt

# Unmanaged applications
yabai -m rule --add app="^1Password$" manage=off
yabai -m rule --add app="^Alacritty$" manage=off grid=9:17:4:2:9:5
yabai -m rule --add app="^AppCleaner$" manage=off
yabai -m rule --add app="^Arc$" title="^(Max|General|Profiles|Links|Shortcuts|Icon|Advanced)$" manage=off
yabai -m rule --add app="^CleanShot X$" manage=off
yabai -m rule --add app="^Digital Color Meter$" manage=off sticky=on
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Gather$" manage=off
yabai -m rule --add app="^ImageOptim$" manage=off
yabai -m rule --add app="^Messages$" manage=off
yabai -m rule --add app="^Preview$" manage=off
yabai -m rule --add app="^Raycast$" manage=off
yabai -m rule --add app="^System Information$" manage=off
yabai -m rule --add app="^System Settings$" manage=off sticky=on
yabai -m rule --add app="^The Unarchiver$" manage=off

# Start JankyBorders tool
borders active_color=0xfffcfcfa inactive_color=0x002d2a2e width=10.0 &

echo "yabai -- config loaded"
